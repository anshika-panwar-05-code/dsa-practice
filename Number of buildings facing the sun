import java.util.*;
class Main {
    public static void main(String[] args) {
      int[] arr= {6, 2, 8, 4, 11, 13};
      int left=arr[0];
      int count=0;
      for(int i=0;i<arr.length;i++){
          if(arr[i]>=left){
            left=arr[i];
              count++;
          }
          
      }
      System.out.println(count);
}
}
